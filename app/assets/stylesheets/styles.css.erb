.input {
	position: absolute;
	opacity: 0;
}
.label {
	width: 100%;
	padding: 20px 30px;
	background: magenta;
	cursor: pointer;
	font-weight: bold;
	font-size: 18px;
	color: purple;
	transition: background 0.1s, color 0.1s;
}

.label:hover {
	background: #d8d8d8;
}

.label:active {
	background: turquoise;
}

.input:focus + .label {
	box-shadow: inset 0px 0px 0px 3px #2aa1c0;
	z-index: 1;
}

.input:checked + .label {
	background: turquoise;
	color: navy;
}

@media (min-width: 600px) {
	.label {
		width: auto;
	}
}
.panel {
	display: none;

	padding: 20px 30px 30px;
  color: turquoise;
  font-weight: bold;
	background:linear-gradient(Purple, red);
}

@media (min-width: 600px) {
	.panel {
		order: 99;
	}
}

.input:checked + .label + .panel {
	display: block;
}

